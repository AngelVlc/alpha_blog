<h1>
  Listing articles
</h1>

<p>
  <%= link_to "create new", new_article_path %>  
</p>


<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th>Created</th>
    <th>Updated</th>
  </tr>
  <% @articles.each do |art| %>
    <tr>
      <td><%= art.title %></td>
      <td><%= truncate(art.description, length: 20) %></td>      
      <td><%= art.user.username %></td>
      <td><%= time_ago_in_words(art.created_at) %></td>
      <td><%= time_ago_in_words(art.updated_at) %></td>
      <td><%= link_to 'Edit', edit_article_path(art) %></td>
      <td><%= link_to 'Show', article_path(art) %></td>
      <td><%= link_to 'Delete', article_path(art), method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
  <% end %>
</table>